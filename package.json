{
  "name": "dnd-campaign-manager",
  "version": "0.1.0",
  "description": "D&D Campaign Manager Desktop App",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build:main": "tsc -p tsconfig.node.json",
    "build": "npm run build:main && vite build",
    "build:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "dnd",
    "campaign",
    "manager"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@dnd-kit/core": "^6.0.0",
    "@dnd-kit/sortable": "^7.0.0",
    "better-sqlite3": "^12.4.1",
    "electron": "^38.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.0",
    "vite": "^7.1.10",
    "wait-on": "^7.0.0"
  }
}
